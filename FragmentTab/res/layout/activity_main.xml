<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/fragment_home"
        android:name="com.gavingn.fragmenttab.FragmentHome"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1" />

    <fragment
        android:id="@+id/fragment_category"
        android:name="com.gavingn.fragmenttab.FragmentCategory"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1" />

    <fragment
        android:id="@+id/fragment_down"
        android:name="com.gavingn.fragmenttab.FragmentDown"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1" />

    <fragment
        android:id="@+id/fragment_user"
        android:name="com.gavingn.fragmenttab.FragmentUser"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1" />

    <fragment
        android:id="@+id/fragment_setting"
        android:name="com.gavingn.fragmenttab.FragmentSetting"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1" />

    <com.gavingn.fragmenttab.ViewIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.gavingn.fragmenttab.ViewIndicator>

</LinearLayout>